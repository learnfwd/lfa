// Stacktable CSS for responsive tables.
table
  width: 100%
  
  &.stacktable
    th
      text-align: center
    .st-head-row
      padding-top: 1em
    .st-head-row.st-head-row-main
      font-size: 1.5em
      padding-top: 0
    .st-key
      width: 49%
      text-align: right
      padding-right: 1%
    .st-val
      width: 49%
      padding-left: 1%
  
  // actual responsiveness
  &.stacktable.table-responsive
    display: table
  &.small-only
    display: none

  @media (max-width: 767px)
    &.table-responsive
      display: none
    &.stacktable.small-only
      display: table