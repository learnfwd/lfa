.radio.btn input[type="radio"]
.radio-inline.btn input[type="radio"]
.checkbox.btn input[type="checkbox"]
.checkbox-inline.btn input[type="checkbox"]
  margin-left: 0
  position: absolute
  left: 10px

select
  max-width: 100%

// refactor at your own risk.
// from: http://tympanus.net/codrops/2013/05/21/natural-language-form-with-custom-input-elements/
form.fancy
  
  .nl-field.nl-ti-text
    border: none
    padding: 0
    box-shadow: none
    a.nl-field-toggle
      white-space: pre
      word-wrap: break-word
  
  .nl-ul-wrapper ul
    list-style: none
    margin: 0
    padding: 0
  
  input
  select.single
  button
  textarea
    border: none
    background: transparent
    font-family: inherit
    font-size: inherit
    color: inherit
    font-weight: inherit
    line-height: inherit
    display: inline-block
    padding: 0
    margin: 0
    -webkit-appearance: none
    -moz-appearance: none
  
  textarea
    height: 5em
  
  input:focus
    outline: none
  textarea:focus
    outline: none
  
  /* custom field (drop-down, text element) styling  */
  .nl-field
    display: inline
    position: relative
  
  .nl-ul-wrapper
    z-index: 10000
  
  /* the toggle is the visible part in the form */
  .nl-field-toggle
  input
  textarea
  select.single
    line-height: inherit
    display: inline
    color: #b14943
    cursor: pointer
    border-bottom: 1px dashed #b14943
    z-index: 1000
  
  .nl-ul-wrapper
    position: fixed
    top: 10%
    left: 0
    right: 0
    height: 0
  
  /* drop-down list / text element */
  .nl-field ul
    margin: 0 auto
    padding: 0
    display: block
    max-width: 20em
    visibility: hidden
    background: #76C3BD
    font-size: 200%
    opacity: 0
    scale(0.9)
    transition: visibility 0s 0.3s
    transition: opacity 0.3s
  
  .nl-field.nl-field-open ul
    visibility: visible
    opacity: 1
    scale(1)
    transition: visibility 0s 0s
    transition: opacity 0.3s
    transition: transform 0.3s
  
  .nl-field ul li
    color: #fff
    position: relative
  
  .nl-dd ul li
    padding: 0 1.5em 0 0.5em
    cursor: pointer
    white-space: nowrap
  
  .nl-dd ul li.nl-dd-checked
    color: #478982
  
  .no-touch .nl-dd ul li:hover
    background: rgba(0,0,0,0.05)
  
  .no-touch .nl-dd ul li:hover:active
    color: #478982
  
  /* icons for some elements */
  .nl-dd ul li.nl-dd-checked:before
  .nl-submit:before
  .nl-field-go:before
    font-family: FontAwesome
    speak: none
    font-style: normal
    font-weight: normal
    font-variant: normal
    text-transform: none
    -webkit-font-smoothing: antialiased
  
  .nl-dd ul li.nl-dd-checked:before
    content: "\F00C"
    position: absolute
    right: 1em
    font-size: 50%
    line-height: 3
  
  .nl-ti-text ul
    min-width: 8em
  
  .nl-ti-text ul li.nl-ti-input input
  .nl-ti-text ul li.nl-ti-input textarea
    width: 100%
    padding: 0.2em 2em 0.2em 0.5em
    border-bottom: none
    color: #fff
  
  .nl-field-go
    position: absolute
    right: 0
    top: 0
    height: 100%
    cursor: pointer
    background: rgba(0,0,0,0.1)
    width: 1.8em
    text-align: center
    color: transparent
  
  .nl-field-go:before
    content: "\F054"
    font-size: 75%
    color: #fff
    width: 100%
    line-height: 2.5
    display: block
  
  /* custom placeholder color */
  input
  textarea
    placeholder(rgba(255,255,255,0.8))
  
  input:active
  input:focus
  textarea:active
  textarea:focus
    placeholder(rgba(255,255,255,0.2))

  
  /* example field below text input */
  .nl-ti-text ul li.nl-ti-example
    font-size: 40%
    font-style: italic
    font-weight: 400
    padding: 0.4em 1em
    color: rgba(0,0,0,0.2)
    border-top: 1px dashed rgba(255,255,255,0.7)
  
  .nl-ti-text ul li.nl-ti-example em
    color: #fff
  
  /* submit button */
  .nl-submit-wrap
    margin-top: 0.4em
  
  form.fancy .nl-submit
    line-height: 3
    text-transform: uppercase
    cursor: pointer
    position: relative
    background: #76C3BD
    color: #fff
    padding: 0 1em 0 0
    font-size: 40%
    font-weight: bold
    letter-spacing: 3px
  
  .nl-submit:before
    content: "\F00C"
    color: #fff
    float: left
    padding: 0 0.7em
    margin: 0 0.8em 0 0
    background: #69B1A9
  
  .no-touch form.fancy .nl-submit:hover
  .no-touch form.fancy .nl-submit:active
    background: #69B1A9
  
  .no-touch form.fancy .nl-submit:hover:before
    background: #58a199
  
  /* overlay becomes visible when a field is opened */
  .nl-overlay
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(0,0,0,0.5)
    opacity: 0
    // z-index: 9999
    z-index: 0
    visibility: hidden
    transition: visibility 0s 0.3s
    transition: opacity 0.3s
  
  .nl-overlay.open
    opacity: 1
    visibility: visible
    -webkit-transition-delay: 0s
    -moz-transition-delay: 0s
    transition-delay: 0s