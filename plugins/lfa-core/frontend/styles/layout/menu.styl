      #menu
        background-color: transparent !important
        position: absolute !important
        // top: 50vh !important
        // margin-top: -50% !important
        border: none !important

        box-shadow: none

        &.pinned
          transform: translate3d(0, 0, 0)

        &.unpinned
          transform: translate3d(-72px, 0, 0)

